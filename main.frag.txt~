#version 130

uniform int time;
uniform sampler2D Sam;
uniform int mode;

in vec2 pass_Tex;
in vec4 pass_Color;

out vec4 out_Color;


void main(void)
{

//out_Color=vec4(pass_Color,1);
if(mode==0){
vec3 temp=vec3(sin(time/50.0),-sin(time/50.0),cos(time/50.0));
out_Color=vec4(mix(pass_Color.rgb,temp,pass_Color.a),1);
}
if(mode==1){
out_Color=vec4(1-texture(Sam,pass_Tex).rgb,1);
}


}
